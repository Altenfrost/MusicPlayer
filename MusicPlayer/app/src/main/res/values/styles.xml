<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat"></style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SongDuration" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorDuration</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="SongTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorSongTitle</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
