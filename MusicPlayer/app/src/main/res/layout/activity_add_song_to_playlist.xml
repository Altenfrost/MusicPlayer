<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context="com.project.artur.musicplayer.AddSongToPlaylistActivity">


    <TextView
        android:id="@+id/choose_playlist_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.5"
        android:text="@string/choose_available_playlist_text"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/available_playlists_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@id/choose_playlist_text"
        android:layout_weight="4" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/available_playlists_list"
        android:layout_below="@id/available_playlists_list"
        android:layout_weight="3"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">


            <EditText
                android:id="@+id/new_playlist_edit_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="@string/insert_new_playlist_text" />

            <Button
                android:id="@+id/accept_new_playlist_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/confirm_new_playlist_name" />

            <TextView
                android:id="@+id/playlist_operation_summary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/assign_playlist_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorSaveButton"
        android:text="@string/save_song_to_playlist_button" />

